<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_teacher_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/TX_CO_BBG"
    android:orientation="vertical"
    tools:context="com.tx.listview.TeacherListActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorPrimary" />

    <com.tx.listview.TXListView
        android:id="@+id/listView"
        style="@style/tx_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:txEnabledLoadMore="true"
        app:txEnabledPullToRefresh="true" />

</LinearLayout>
